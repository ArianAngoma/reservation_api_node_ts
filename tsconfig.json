{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types.d.ts"
    ],
    "types": [
      "node",
      "jest"
    ],
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "files": [
    "types.d.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
